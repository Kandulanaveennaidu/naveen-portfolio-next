# ============================================
# ENVIRONMENT VARIABLES FOR NAVEEN PORTFOLIO
# ============================================
# Copy this file to .env.local and fill in your values

# ==========================================
# ZOOM INTEGRATION (Server-to-Server OAuth)
# ==========================================
# Get from: https://marketplace.zoom.us/develop/create
ZOOM_BASE_URL=https://api.zoom.us/v2/
ZOOM_ACCOUNT_ID=your_account_id
ZOOM_CLIENT_ID=your_client_id
ZOOM_CLIENT_SECRET=your_client_secret
ZOOM_SECRET_TOKEN=your_secret_token
ZOOM_VERIFICATION_TOKEN=your_verification_token

# ==========================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ==========================================
# For Gmail: Enable 2FA and create App Password
# https://myaccount.google.com/apppasswords
EMAIL_FROM=your_email@gmail.com
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_USE_TLS=true
EMAIL_SECURE=false

# ==========================================
# ORGANIZER INFO
# ==========================================
ORGANIZER_EMAIL=your_email@gmail.com
ORGANIZER_NAME=Your Name

# ==========================================
# GEMINI AI CHATBOT
# ==========================================
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key
